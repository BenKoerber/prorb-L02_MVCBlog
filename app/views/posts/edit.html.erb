<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  
  <h2 class="mb-4 text-2xl font-black">
    Edit post (<%= @post.id %>)
  </h2>

  <%= form_with model: @post, url: post_path(@post), method: :put, local: true do |form| %>
    <div class="grid grid-cols-3 gap-3">
      <%= form.label :title %>
      <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      <div></div>
      <%= form.label :body %>
      <%= form.text_area :body, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      <div></div>
      <div></div>
      <%= form.submit "Save", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded focus:outline-none focus:shadow-outline" %>
      <div></div>
      <div></div>
      <%= button_to 'Cancel', post_path(@post), method: :get, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded focus:outline-none focus:shadow-outline" %>
      <div></div>
    </div>
  <% end %>

</div> 


